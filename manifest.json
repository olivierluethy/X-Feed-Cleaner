{
    "manifest_version": 3,
    "name": "X-Feed Cleaner",
    "version": "1.0",
    "description": "A Chrome extension to remove only the home feed on X.com (formerly Twitter) for a cleaner experience.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["https://x.com/*", "https://twitter.com/*"],
        "js": ["hideFeed.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  }
  